<div class="container">
  <h1>SABRINA STREET JOURNAL</h1>
  <%= link_to 'Submit New Article', new_article_path, class: 'btn btn-primary'%>
 
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Actions</th>
      </tr>
     </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td>
            <%= link_to 'Show', article_path(article), class: 'glyphicon glyphicon-new-window' %>
            <%= link_to 'Edit', edit_article_path(article), class: 'glyphicon glyphicon-edit' %>
            <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash' %>
          </td>
         </tr>
      <% end %>
    </tbody>
  </table>
</div>