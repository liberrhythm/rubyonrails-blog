<div class="container">  
  <h2>
    <%= @article.title %>
  </h2>
 
  <p>
    <%= @article.text %>
  </p>

  <h4>Comments:</h4>
  <%= render @article.comments %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>

  <%= link_to 'Edit Article', edit_article_path(@article) %>
  <%= link_to 'Back to Article', articles_path %>
</div>